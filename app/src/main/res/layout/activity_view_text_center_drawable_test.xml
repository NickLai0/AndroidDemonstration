<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.test.view.DrawableCenterTextView
            style="@style/WrapContent"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableTop="@drawable/ic_arrow_up"
            android:padding="5dp"
            android:text="DrawableCenterTextView 01"
            android:textColor="@color/white" />

        <com.test.view.DrawableCenterTextView
            style="@style/WrapContent"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableBottom="@drawable/ic_arrow_down"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="DrawableCenterTextView 02"
            android:textColor="@color/white" />

        <com.test.view.DrawableCenterTextView
            style="@style/WrapContent"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_arrow_previous"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="DrawableCenterTextView 03"
            android:textColor="@color/white" />

        <com.test.view.DrawableCenterTextView
            style="@style/WrapContent"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableEnd="@drawable/ic_arrow_next"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="DrawableCenterTextView 04"
            android:textColor="@color/white" />


        <com.test.view.DrawableCenterTextView
            style="@style/WrapContent"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_arrow_previous"
            android:drawableTop="@drawable/ic_arrow_up"
            android:drawableEnd="@drawable/ic_arrow_next"
            android:drawableBottom="@drawable/ic_arrow_down"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="DrawableCenterTextView 05"
            android:textColor="@color/white" />


        <com.test.view.DrawableCenterTextView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_arrow_previous"
            android:drawableTop="@drawable/ic_arrow_up"
            android:drawableEnd="@drawable/ic_arrow_next"
            android:drawableBottom="@drawable/ic_arrow_down"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="DrawableCenterTextView 05"
            android:textColor="@color/white" />

        <com.test.view.DrawableCenterTextView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_arrow_previous"
            android:drawableTop="@drawable/ic_arrow_up"
            android:gravity="center"
            android:drawableEnd="@drawable/ic_arrow_next"
            android:drawableBottom="@drawable/ic_arrow_down"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="DrawableCenterTextView 06"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>