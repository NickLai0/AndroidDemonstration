<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/acht_et_html_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Input Html here"
        android:inputType="text|textMultiLine"
        android:maxLines="3"
        app:layout_constraintEnd_toStartOf="@id/acht_btn_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/acht_btn_verify"
        style="@style/WrapContent"
        android:text="verify"
        app:layout_constraintBottom_toBottomOf="@id/acht_et_html_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/acht_et_html_input" />

    <TextView
        android:id="@+id/acht_tv_result"
        style="@style/WrapContent"
        android:layout_marginTop="20dp"
        android:text="show the result here."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acht_et_html_input" />

</android.support.constraint.ConstraintLayout>