    <item android:id="@android:id/background">
        <shape
            android:innerRadius="45dp"
            android:shape="ring"
            android:thickness="3dp"
            android:useLevel="false"></shape>

    </item>
    <item android:id="@android:id/progress">
        <shape
            android:innerRadius="45dp"
            android:shape="ring"
            android:thickness="3dp"
            android:useLevel="false"></shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadius="45dp"
            android:shape="ring"
            android:thickness="3dp"
            android:useLevel="false"></shape>
    </item>
</layer-list>
